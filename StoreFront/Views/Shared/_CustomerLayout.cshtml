@model Store_Front.Models.SearchViewModel

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer - @ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="<%= Url.Content('~/Scripts/jquery-1.3.2.js'') %>" type="text/javascript"></script>
    <script src="<%= Url.Content(' ~/Scripts/MicrosoftAjax.debug.js') %>" type="text/javascript"></script>

</head>
<body>
    <div class="page-header">
        <div class="navbar-header navbar-fixed-top">
            <a class="navbar-brand">@ViewBag.Title</a>
            <a class="navbar-right navbar-brand" href="~/Customer/ShoppingCart">View Cart</a>
            <p class="lead top-right" style="float:right; padding-top:10px">
                   Welcome, @Model.UserName

            </p>
            <br /><p class="bottom">
                <ul class="nav navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="nav-item">@Html.ActionLink("Search", "Index", "Search")</li>
                    <li class="nav-item">@Html.ActionLink("Profile", "Index", "Profile")</li>
                </ul>
            </p>
        </div>




    </div>





    <div class="container body-content">
        @this.RenderBody()
    </div>
    <div class="panel-footer">
        <footer>
            <p>Customer View</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>