<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar  navbar-fixed-top">
        <a class="navbar-brand">@ViewBag.Title</a>
        <a class="navbar-right navbar-brand" href="~/Customer/ShoppingCart">View Cart</a>
    </div> 
    
    <div class="navbar">
                <ul class="nav navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Home","Index","Home")</li>
                    <li class="nav-item">@Html.ActionLink("Search", "Index", "Search")</li>                   
                    <li class="nav-item">@Html.ActionLink("Profile","Index","Profile")</li>
                </ul>
        </div>

        



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>